<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.TablesPage"
             Title="Sơ đồ bàn"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Border StrokeShape="RoundRectangle 10" 
                    Stroke="#AAAAAA" 
                    BackgroundColor="#ECECEC"
                    HorizontalOptions="Center"
                    Padding="20,10"
                    Margin="0,0,0,10">
                <Label Text="BẾP / THU NGÂN" 
                       FontFamily="RobotoMono"
                       FontAttributes="Bold"
                       TextColor="Black" />
            </Border>

            <Label Text="SEATING CHART"
                   FontSize="28"
                   FontFamily="RobotoMono"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Grid ColumnDefinitions="*, 1.2*, *" 
                  ColumnSpacing="15" 
                  Margin="0,15,0,0">

                <VerticalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Fill">
                    <Button Text="Bàn 1" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                    <Button Text="Bàn 2" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                    <Button Text="Bàn 3" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Fill">
                    <Button Text="Bàn 4 (Đôi)" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                    <Button Text="Bàn 5 (Đôi)" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                    <Button Text="Bàn 6 (Đôi)" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                    <Button Text="Bàn 7 (Đôi)" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="2" Spacing="5" HorizontalOptions="Fill">
                    <Button Text="Bàn 8" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                    <Button Text="Bàn 9" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                    <Button Text="Bàn 10" Style="{StaticResource TableStyle_Empty}" Clicked="Table_Clicked"/>
                </VerticalStackLayout>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>