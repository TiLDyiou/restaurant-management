<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.DashboardPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <!-- Style cho Border các nút -->
        <Style x:Key="DashboardButtonStyle" TargetType="Border">
            <Setter Property="Stroke" Value="#E0E0E0"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="15"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="HeightRequest" Value="120"/>
        </Style>

        <!-- Style cho Button bên trong Border -->
        <Style x:Key="DashboardButtonInnerStyle" TargetType="Button">
            <Setter Property="TextColor" Value="#263238"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
        </Style>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="250,*" RowDefinitions="*" BackgroundColor="White">

        <!-- Bên trái -->
        <StackLayout BackgroundColor="#FFBD59"
                     Padding="20"
                     VerticalOptions="FillAndExpand"
                     Spacing="25">

            <Label Text="NHÓM II"
                   TextColor="#263238"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Restaurant Management System"
                   TextColor="#263238"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand" />

            <BoxView HeightRequest="2" BackgroundColor="#263238" Opacity="0.2" Margin="0,10,0,10" />

            <Label x:Name="WelcomeLabel"
                   Text="Welcome, User"
                   FontSize="16"
                   TextColor="#263238"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

            <Button Text="Đăng xuất"
                    x:Name="LogoutButton"
                    TextColor="White"
                    BackgroundColor="#263238"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    Clicked="OnLogoutClicked"/>
        </StackLayout>

        <!-- Bên phải (nút chức năng) -->
        <ScrollView Grid.Column="1" Padding="30">
            <Grid ColumnDefinitions="*,*,*,*"
                  RowDefinitions="Auto,Auto"
                  ColumnSpacing="20"
                  RowSpacing="20">

                <!-- Row 0 -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource DashboardButtonStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="users.png" HeightRequest="40"/>
                        <Button Text="Users" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnUsersClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource DashboardButtonStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="categories.png" HeightRequest="40"/>
                        <Button Text="Food Categories" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnFoodCategoriesClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource DashboardButtonStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="menu.png" HeightRequest="40"/>
                        <Button Text="Food Menu" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnFoodMenuClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource DashboardButtonStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="orders.png" HeightRequest="40"/>
                        <Button Text="Orders" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnOrdersClicked"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Row 1 -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource DashboardButtonStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="tables.png" HeightRequest="40"/>
                        <Button Text="Tables" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnTablesClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource DashboardButtonStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="bill.png" HeightRequest="40"/>
                        <Button Text="Bill Generation" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnBillGenerationClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource DashboardButtonStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="modify.png" HeightRequest="40"/>
                        <Button Text="Order Modifications" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnOrderModificationsClicked"/>
                    </VerticalStackLayout>
                </Border>

                <!-- ô trống để cân đối -->
                <BoxView Grid.Row="1" Grid.Column="3" BackgroundColor="Transparent"/>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
