<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.ForgotPasswordPage"
             BackgroundColor="#263238"
             Title="Quên mật khẩu">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Quên mật khẩu"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#FFBD59"
                   HorizontalOptions="Center"/>

            <!-- Step 1: Nhập Email -->
            <StackLayout x:Name="Step1Layout" IsVisible="True" Spacing="15">
                <Label Text="Nhập email để nhận OTP"
                       TextColor="White"/>
                <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       TextColor="Black"
                       BackgroundColor="#FAFAFA"
                       Keyboard="Email"/>
                <Button x:Name="SendOtpButton"
                        Text="Gửi OTP"
                        BackgroundColor="#FFBD59"
                        TextColor="#263238"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Clicked="OnSendOtpClicked"/>
            </StackLayout>

            <!-- Step 2: Nhập OTP -->
            <StackLayout x:Name="Step2VerifyLayout" IsVisible="False" Spacing="15">
                <Label Text="Nhập mã OTP đã được gửi đến email"
                       TextColor="White"/>
                <Entry x:Name="OtpEntry"
                       Placeholder="OTP"
                       TextColor="Black"
                       BackgroundColor="#FAFAFA"
                       Keyboard="Numeric"/>
                <Button x:Name="VerifyOtpButton"
                        Text="Xác nhận OTP"
                        BackgroundColor="#FFBD59"
                        TextColor="#263238"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Clicked="OnVerifyOtpClicked"/>
            </StackLayout>

            <!-- Step 3: Nhập mật khẩu mới -->
            <StackLayout x:Name="Step3ResetLayout" IsVisible="False" Spacing="15">
                <Label Text="Nhập mật khẩu mới"
                       TextColor="White"/>
                <Entry x:Name="NewPasswordEntry"
                       Placeholder="Mật khẩu mới"
                       IsPassword="True"
                       TextColor="Black"
                       BackgroundColor="#FAFAFA"/>
                <Entry x:Name="ConfirmPasswordEntry"
                       Placeholder="Xác nhận mật khẩu mới"
                       IsPassword="True"
                       TextColor="Black"
                       BackgroundColor="#FAFAFA"/>
                <Button x:Name="ResetPasswordButton"
                        Text="Đổi mật khẩu"
                        BackgroundColor="#FFBD59"
                        TextColor="#263238"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Clicked="OnResetPasswordClicked"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
