<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RestaurantManagementGUI"
             xmlns:converters="clr-namespace:RestaurantManagementGUI.Converters"
             x:Class="RestaurantManagementGUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <Style TargetType="Border" x:Key="BaseTableStyle">
                <Setter Property="StrokeShape" Value="RoundRectangle 15"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="5,10,5,10"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#000" Offset="3,3" Radius="8" Opacity="0.1"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Border" x:Key="SmallTableStyle" BasedOn="{StaticResource BaseTableStyle}">
                <Setter Property="Stroke" Value="#B0BEC5"/>
                <Setter Property="BackgroundColor" Value="#E3F2FD"/>
            </Style>

            <Style TargetType="Border" x:Key="LargeTableStyle" BasedOn="{StaticResource BaseTableStyle}">
                <Setter Property="Stroke" Value="#F57C00"/>
                <Setter Property="BackgroundColor" Value="#FFF8E1"/>
            </Style>

            <Style TargetType="Border" x:Key="OccupiedTableStyle" BasedOn="{StaticResource BaseTableStyle}">
                <Setter Property="Stroke" Value="#E65100"/>
                <Setter Property="BackgroundColor" Value="#FFD180"/>
            </Style>

            <Style TargetType="Label" x:Key="TableLabelStyle">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#3E2723"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>

            <Style TargetType="Image" x:Key="PlantStyle">
                <Setter Property="Source" Value="chaucay.png"/>
                <Setter Property="HeightRequest" Value="30"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Opacity" Value="0.7"/>
            </Style>
            <Color x:Key="PrimaryBrandColor">#263238</Color>
            <Color x:Key="SecondaryTextColor">#737373</Color>
            <Color x:Key="ButtonBackground">#FFBD59</Color>
            <Color x:Key="ButtonText">#263238</Color>
            <Color x:Key="BackgroundColor">#F8F9FA</Color>
            <Color x:Key="CardBackground">#FFFFFF</Color>
            <Color x:Key="BorderColor">#E0E0E0</Color>
            <Color x:Key="SuccessColor">#4CAF50</Color>
            <Color x:Key="DangerColor">#F44336</Color>
            <Color x:Key="WarningColor">#FF9800</Color>
            <Color x:Key="PriceColor">#D32F2F</Color>


            <!-- Category Button Style -->
            <Style x:Key="CategoryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#F0F0F0" />
                <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Padding" Value="20,8" />
                <Setter Property="BorderWidth" Value="0" />
            </Style>

            <!-- Category Button Selected State -->
            <Style x:Key="CategoryButtonSelectedStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackground}" />
                <Setter Property="TextColor" Value="{StaticResource ButtonText}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Padding" Value="20,8" />
                <Setter Property="BorderWidth" Value="0" />
            </Style>


            <!-- Food Card Border Style -->
            <Style x:Key="FoodCardBorder" TargetType="Border">
                <Setter Property="StrokeShape" Value="RoundRectangle 12" />
                <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Shadow">
                    <Shadow Brush="#000000" Offset="0,2" Radius="8" Opacity="0.08"/>
                </Setter>
            </Style>


            <!-- Primary Button Style -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackground}" />
                <Setter Property="TextColor" Value="{StaticResource ButtonText}" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="BorderWidth" Value="0" />
            </Style>

            <!-- Secondary Button Style -->
            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#E8E8E8" />
                <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="BorderWidth" Value="0" />
            </Style>


            <!-- Quantity Button Style -->
            <Style x:Key="QuantityButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackground}" />
                <Setter Property="TextColor" Value="{StaticResource ButtonText}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="WidthRequest" Value="32" />
                <Setter Property="HeightRequest" Value="32" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="BorderWidth" Value="0" />
            </Style>

            <!-- Small Icon Button (for note, delete...) -->
            <Style x:Key="IconButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="WidthRequest" Value="36" />
                <Setter Property="HeightRequest" Value="36" />
                <Setter Property="CornerRadius" Value="18" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="BorderWidth" Value="0" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>