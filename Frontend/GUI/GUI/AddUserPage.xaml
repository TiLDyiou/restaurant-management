<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.AddUserPage"
             Title="Thêm nhân viên"
             BackgroundColor="#FAFAFA">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="18">

            <Label Text="THÊM NHÂN VIÊN"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#263238"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20" />

            <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0" CornerRadius="12" Padding="10">
                <Entry x:Name="HoTenEntry" Placeholder="Họ tên" />
            </Frame>

            <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0" CornerRadius="12" Padding="10">
                <Entry x:Name="UsernameEntry" Placeholder="Tên đăng nhập" />
            </Frame>

            <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0" CornerRadius="12" Padding="10">
                <Entry x:Name="PasswordEntry" Placeholder="Mật khẩu" IsPassword="True" />
            </Frame>

            <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0" CornerRadius="12" Padding="10">
                <Entry x:Name="SDTEntry" Placeholder="Số điện thoại" Keyboard="Telephone" />
            </Frame>

            <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0" CornerRadius="12" Padding="10">
                <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            </Frame>

            <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0" CornerRadius="12" Padding="10">
                <Entry x:Name="ChucVuEntry" Placeholder="Chức vụ" />
            </Frame>

            <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0" CornerRadius="12" Padding="10">
                <Picker x:Name="QuyenPicker" Title="Chọn quyền">
                    <Picker.Items>
                        <x:String>NhanVien</x:String>
                        <x:String>Admin</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>

            <Button Text="➕ Thêm nhân viên"
                    Clicked="OnAddUserClicked"
                    BackgroundColor="#FFBD59"
                    TextColor="#263238"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
