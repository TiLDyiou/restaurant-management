<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.ChefDashboardPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid ColumnDefinitions="250,*" RowDefinitions="*" BackgroundColor="White">

        <!-- Bên trái -->
        <StackLayout BackgroundColor="#FFBD59"
                     Padding="20"
                     VerticalOptions="Fill"
                     Spacing="25">

            <Label Text="NHÓM II"
                   TextColor="#263238"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Restaurant Management System"
                   TextColor="#263238"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand" />

            <BoxView HeightRequest="2" BackgroundColor="#263238" Opacity="0.2" Margin="0,10,0,10" />

            <Label x:Name="WelcomeLabel"
                   Text="Welcome, User"
                   FontSize="16"
                   TextColor="#263238"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />
            <Button Text="Đăng xuất"
                x:Name="LogoutButton"
                TextColor="White"
                BackgroundColor="#263238"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="40"
                HorizontalOptions="Center"
                Clicked="OnLogoutClicked"/>

        </StackLayout>

        <!-- Bên phải -->
        <ScrollView Grid.Column="1" Padding="30">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="20" RowSpacing="20">

                <!-- Orders -->
                <Border Grid.Row="0" Grid.Column="0"
                        Stroke="#E0E0E0" StrokeThickness="1"
                        StrokeShape="RoundRectangle 15"
                        BackgroundColor="White" HeightRequest="120">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="orders.png" HeightRequest="40" />
                        <Button Text="Orders"
                                TextColor="#263238"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                Clicked="OnOrdersClicked" />
                    </VerticalStackLayout>
                </Border>

                <!-- Users -->
                <Border Grid.Row="0" Grid.Column="1"
                        Stroke="#E0E0E0" StrokeThickness="1"
                        StrokeShape="RoundRectangle 15"
                        BackgroundColor="White" HeightRequest="120">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="users.png" HeightRequest="40" />
                        <Button Text="Users"
                                TextColor="#263238"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                Clicked="OnUsersClicked" />
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </ScrollView>

    </Grid>
</ContentPage>
