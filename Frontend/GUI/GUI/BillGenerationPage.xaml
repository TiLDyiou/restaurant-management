<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RestaurantManagementGUI.ViewModels"
             x:Class="RestaurantManagementGUI.BillGenerationPage"
             Title="THANH TOÁN"
             BackgroundColor="#1E2630">

    <Grid ColumnDefinitions="400, *">
        <Grid Grid.Column="0" RowDefinitions="Auto, *" Padding="20" BackgroundColor="#263238">
            <Label Text="DANH SÁCH HÓA ĐƠN" TextColor="#FFC107" FontSize="20" FontAttributes="Bold" Margin="0,0,0,20"/>

            <CollectionView Grid.Row="1" ItemsSource="{Binding PendingBills}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 10" StrokeThickness="0" BackgroundColor="#37474F" Margin="0,0,0,15" Padding="15">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BillGenerationViewModel}}, Path=SelectBillCommand}" CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                                <Border Grid.RowSpan="2" HeightRequest="50" WidthRequest="50" StrokeShape="RoundRectangle 25" BackgroundColor="#FFC107" Margin="0,0,15,0">
                                    <Label Text="{Binding TableName}" TextColor="#1E2630" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12"/>
                                </Border>

                                <Label Grid.Column="1" Text="{Binding MaHD}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                                <Label Grid.Column="1" Grid.Row="1" Text="{Binding NgayLap, StringFormat='{0:HH:mm}'}" TextColor="#B0BEC5" FontSize="12"/>
                                <Label Grid.Column="1" Grid.RowSpan="2" Text="{Binding FormattedTotal}" 
                                       TextColor="#4CAF50" FontAttributes="Bold" FontSize="18" 
                                       HorizontalOptions="End" VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <Grid Grid.Column="1" RowDefinitions="*, Auto" Padding="30">

            <Border Grid.Row="0" StrokeShape="RoundRectangle 15" BackgroundColor="White" Padding="30" Margin="0,0,0,20" VerticalOptions="Fill">
                <Grid RowDefinitions="Auto, Auto, *, Auto">
                    <StackLayout HorizontalOptions="Center" Spacing="5">
                        <Label Text="NHÀ HÀNG NHÓM II" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
                        <Label Text="--- Phiếu Thanh Toán ---" TextColor="Gray" HorizontalOptions="Center"/>
                        <Label Text="{Binding SelectedBill.MaHD, StringFormat='Số phiếu: {0}'}" TextColor="Gray" HorizontalOptions="Center"/>
                        <Label Text="{Binding SelectedBill.NgayLap, StringFormat='Ngày: {0:dd/MM/yyyy HH:mm}'}" TextColor="Gray" HorizontalOptions="Center"/>
                    </StackLayout>

                    <BoxView Grid.Row="1" HeightRequest="1" Color="Black" Margin="0,15"/>

                    <CollectionView Grid.Row="2" ItemsSource="{Binding SelectedBill.ChiTietHoaDons}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*, 50, 100" Margin="0,5">
                                    <Label Text="{Binding TenMA}" TextColor="#333" FontSize="16"/>
                                    <Label Grid.Column="1" Text="{Binding SoLuong, StringFormat='x{0}'}" TextColor="#333" HorizontalOptions="Center"/>
                                    <Label Grid.Column="2" Text="{Binding FormattedTotal}" TextColor="#333" FontAttributes="Bold" HorizontalOptions="End"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Grid Grid.Row="3" ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" Margin="0,20,0,0">
                        <BoxView Grid.ColumnSpan="2" HeightRequest="1" Color="Black" Margin="0,0,0,10" VerticalOptions="Start"/>
                        <Label Text="TỔNG CỘNG:" FontSize="20" FontAttributes="Bold" TextColor="Black" VerticalOptions="End"/>
                        <Label Grid.Column="1" Text="{Binding SelectedBill.FormattedTotal}" 
                               FontSize="28" FontAttributes="Bold" TextColor="#D32F2F" HorizontalOptions="End"/>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="1" StrokeShape="RoundRectangle 15" BackgroundColor="#263238" Padding="20">
                <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *">

                    <StackLayout Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,0,0,20">
                        <RadioButton Content="Tiền mặt" TextColor="White" GroupName="PaymentMethod" 
                                     IsChecked="{Binding IsCashPayment}"
                                     CheckedChanged="OnPaymentMethodChanged" Value="Cash"/>
                        <RadioButton Content="Chuyển khoản (QR)" TextColor="White" GroupName="PaymentMethod" 
                                     CheckedChanged="OnPaymentMethodChanged" Value="Transfer"/>
                    </StackLayout>

                    <Grid x:Name="CashSection" Grid.Row="1" Grid.Column="0" RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, *" IsVisible="True">
                        <Label Text="Khách đưa:" TextColor="White" VerticalOptions="Center" Margin="0,0,10,0"/>
                        <Entry Grid.Column="1" Text="{Binding CustomerPayAmount}" Keyboard="Numeric" Placeholder="Nhập số tiền" 
                               TextColor="Black" BackgroundColor="White" Margin="0,0,0,10"/>

                        <Label Grid.Row="1" Text="Tiền thừa:" TextColor="#FFC107" FontAttributes="Bold" FontSize="18"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding ChangeAmount, StringFormat='{0:N0} đ'}" 
                               TextColor="#FFC107" FontAttributes="Bold" FontSize="18" HorizontalOptions="End"/>
                    </Grid>

                    <Grid x:Name="TransferSection" Grid.Row="1" Grid.Column="0" IsVisible="False">
                        <StackLayout Orientation="Horizontal" Spacing="15" VerticalOptions="Center">
                            <Image Source="dotnet_bot.png" HeightRequest="100" WidthRequest="100" BackgroundColor="White"/>
                            <StackLayout VerticalOptions="Center">
                                <Label Text="Ngân hàng: MBBank" TextColor="White"/>
                                <Label Text="STK: 0987654321" TextColor="White" FontAttributes="Bold" FontSize="18"/>
                                <Label Text="Chủ TK: NHOM II" TextColor="White"/>
                            </StackLayout>
                        </StackLayout>
                    </Grid>

                    <Button Grid.Row="1" Grid.Column="1" Text="THANH TOÁN &amp; IN" 
                            BackgroundColor="#FFC107" TextColor="#1E2630" FontAttributes="Bold" 
                            HeightRequest="60" CornerRadius="10" Margin="20,0,0,0"
                            Command="{Binding PayAndPrintCommand}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>