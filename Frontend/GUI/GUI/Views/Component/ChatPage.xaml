<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RestaurantManagementGUI"
             x:Class="RestaurantManagementGUI.ChatPage"
             Title="Hệ thống tin nhắn nhà hàng"
             BackgroundColor="#F0F2F5">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <local:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="300,*" RowDefinitions="*">
        <!-- Sidebar trái -->
        <Grid Grid.Column="0" RowDefinitions="Auto,Auto,*,Auto" BackgroundColor="White">

            <!-- Header với tab chuyển đổi -->
            <VerticalStackLayout Grid.Row="0" Padding="10" Spacing="10">
                <Label Text="Hệ thống tin nhắn" FontSize="20" FontAttributes="Bold" VerticalOptions="Center"/>

                <Grid ColumnDefinitions="*,*">
                    <Button x:Name="BtnFriends" Text="Bạn bè" 
                            Clicked="OnTabChanged" 
                            BackgroundColor="{Binding FriendsTabColor}"
                            TextColor="White"
                            Grid.Column="0"/>
                    <Button x:Name="BtnGroupChat" Text="Nhóm chung" 
                            Clicked="OnTabChanged"
                            BackgroundColor="{Binding GroupTabColor}"
                            TextColor="White"
                            Grid.Column="1"/>
                </Grid>
            </VerticalStackLayout>

            <!-- Search -->
            <StackLayout Grid.Row="1" Padding="10">
                <Entry x:Name="SearchEntry" 
                       Placeholder="Tìm kiếm..." 
                       BackgroundColor="#EDEDED" 
                       HeightRequest="35"
                       TextChanged="OnSearchTextChanged"/>
            </StackLayout>

            <!-- List hội thoại -->
            <CollectionView x:Name="ConversationsList"
                            Grid.Row="2"
                            ItemsSource="{Binding FilteredConversations}"
                            SelectionMode="Single"
                            SelectionChanged="OnConversationSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="50,*,40" BackgroundColor="Transparent">
                            <!-- Avatar với indicator online -->
                            <Grid ColumnDefinitions="40" RowDefinitions="40" HorizontalOptions="Center">
                                <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" 
                                       Padding="0" BackgroundColor="LightGray" IsClippedToBounds="True">
                                    <Image Source="{Binding AvatarUrl}" Aspect="AspectFill"/>
                                </Frame>
                                <BoxView Grid.Column="0" Grid.Row="0" 
                                         WidthRequest="12" HeightRequest="12"
                                         Color="{Binding OnlineColor}"
                                         IsVisible="{Binding IsOnline}"
                                         HorizontalOptions="End"
                                         VerticalOptions="End"
                                         CornerRadius="6"/>
                            </Grid>

                            <!-- Thông tin -->
                            <VerticalStackLayout Grid.Column="1" Margin="10,0" Spacing="2">
                                <Label Text="{Binding DisplayName}" 
                                       FontAttributes="Bold" 
                                       FontSize="14"
                                       LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding LastMessagePreview}" 
                                       FontSize="12" 
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding LastMessageTime}" 
                                       FontSize="10" 
                                       TextColor="LightGray"/>
                            </VerticalStackLayout>

                            <!-- Badge tin nhắn chưa đọc -->
                            <Frame Grid.Column="2" 
                                   Padding="4" 
                                   CornerRadius="10" 
                                   BackgroundColor="#0084FF"
                                   IsVisible="{Binding UnreadCount, Converter={StaticResource GreaterThanZeroConverter}}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start">
                                <Label Text="{Binding UnreadCount}" 
                                       FontSize="10" 
                                       TextColor="White"
                                       HorizontalTextAlignment="Center"/>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Button actions -->
            <Grid Grid.Row="3" Padding="10" ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <Button Text="Thêm bạn" 
                        Clicked="OnAddFriendClicked" 
                        Grid.Column="0" Grid.Row="0"
                        Margin="0,0,5,5"/>
                <Button Text="Xóa bạn" 
                        Clicked="OnRemoveFriendClicked" 
                        Grid.Column="1" Grid.Row="0"
                        Margin="5,0,0,5"/>
                <Button Text="Tạo nhóm" 
                        Clicked="OnCreateGroupClicked" 
                        Grid.Column="0" Grid.Row="1"
                        Margin="0,5,5,0"/>
                <Button Text="Quản lý nhóm" 
                        Clicked="OnManageGroupClicked" 
                        Grid.Column="1" Grid.Row="1"
                        Margin="5,5,0,0"/>
            </Grid>
        </Grid>

        <!-- Right side: Chat area -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto" BackgroundColor="White"
              IsVisible="{Binding HasSelectedConversation}">

            <!-- Header chat -->
            <Grid Grid.Row="0" Padding="15" BackgroundColor="#E7F3FF" ColumnDefinitions="Auto,*,Auto">
                <Grid ColumnDefinitions="40" RowDefinitions="40" HorizontalOptions="Center">
                    <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" 
                           IsClippedToBounds="True" BackgroundColor="LightGray">
                        <Image Source="{Binding CurrentConversation.AvatarUrl}" Aspect="AspectFill"/>
                    </Frame>
                    <BoxView Grid.Column="0" Grid.Row="0" 
                             WidthRequest="12" HeightRequest="12"
                             Color="{Binding CurrentConversation.OnlineColor}"
                             IsVisible="{Binding CurrentConversation.IsOnline}"
                             HorizontalOptions="End"
                             VerticalOptions="End"
                             CornerRadius="6"/>
                </Grid>

                <VerticalStackLayout Grid.Column="1" Margin="10,0" VerticalOptions="Center">
                    <Label Text="{Binding CurrentConversation.DisplayName}" 
                           FontAttributes="Bold" 
                           FontSize="16"/>
                    <Label Text="{Binding CurrentConversation.StatusText}" 
                           FontSize="12" 
                           TextColor="Gray"/>
                </VerticalStackLayout>

                <Button Grid.Column="2" 
                        Text="⋮" 
                        FontSize="16"
                        Clicked="OnChatOptionsClicked"
                        BackgroundColor="Transparent"
                        WidthRequest="40"/>
            </Grid>

            <!-- Messages area -->
            <CollectionView x:Name="MessagesList"
                            Grid.Row="1"
                            ItemsSource="{Binding Messages}"
                            VerticalOptions="FillAndExpand"
                            BackgroundColor="#F5F5F5">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10,5" 
                              HorizontalOptions="{Binding Alignment}"
                              ColumnDefinitions="*">

                            <!-- Tin nhắn của người khác -->
                            <Grid ColumnDefinitions="Auto,*" 
                                  IsVisible="{Binding IsMine, Converter={StaticResource InverseBooleanConverter}}"
                                  HorizontalOptions="Start">

                                <Frame Grid.Column="1" 
                                       BackgroundColor="{Binding BubbleColor}" 
                                       Padding="12" 
                                       CornerRadius="18" 
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding SenderName}" 
                                               FontSize="12" 
                                               TextColor="#666"
                                               IsVisible="{Binding ShowSenderName}"/>
                                        <Label Text="{Binding Content}" 
                                               TextColor="{Binding TextColor}"/>
                                        <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" 
                                               FontSize="10" 
                                               TextColor="#999"
                                               HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>

                            <!-- Tin nhắn của tôi -->
                            <Grid ColumnDefinitions="*,Auto"
                                  IsVisible="{Binding IsMine}"
                                  HorizontalOptions="End">

                                <Frame Grid.Column="0" 
                                       BackgroundColor="{Binding BubbleColor}" 
                                       Padding="12" 
                                       CornerRadius="18" 
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding Content}" 
                                               TextColor="{Binding TextColor}"/>
                                        <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" 
                                               FontSize="10" 
                                               TextColor="{Binding TimeColor}"
                                               HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Input area -->
            <Grid Grid.Row="2" Padding="15,10" BackgroundColor="White" ColumnDefinitions="*,Auto">
                <Entry x:Name="MessageEntry" 
                       Placeholder="Nhập tin nhắn..." 
                       HorizontalOptions="FillAndExpand"
                       Grid.Column="0"
                       Completed="OnSendClicked"/>
                <Button Text="Gửi" 
                        Clicked="OnSendClicked" 
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        BackgroundColor="#0084FF"
                        TextColor="White"
                        Padding="20,10"/>
            </Grid>

            <!-- No conversation selected -->
            <StackLayout Grid.Row="0" Grid.RowSpan="3" 
                         IsVisible="{Binding HasSelectedConversation, Converter={StaticResource InverseBooleanConverter}}"
                         VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Chọn một cuộc trò chuyện để bắt đầu" 
                       FontSize="16" 
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>