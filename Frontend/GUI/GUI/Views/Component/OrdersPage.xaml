<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.OrdersPage"
             xmlns:vm="clr-namespace:RestaurantManagementGUI"
             xmlns:models="clr-namespace:RestaurantManagementGUI.Models"
             xmlns:converters="clr-namespace:RestaurantManagementGUI.Converters"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F6F6F6"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <vm:FoodMenuViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NoteButtonTextConverter x:Key="NoteButtonTextConverter"/>
            <Style x:Key="CategoryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="#263238"/>
                <Setter Property="BorderColor" Value="#E0E0E0"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*, 380" RowSpacing="0" ColumnSpacing="0">
        

        <!-- HEADER -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                BackgroundColor="#263238" Padding="20,15">
            <Grid ColumnDefinitions="Auto, *, Auto, Auto" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                    <Label Text="{Binding TenBan}" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                    <HorizontalStackLayout Spacing="8">
                        <Image Source="restaurant.png" HeightRequest="14" WidthRequest="14" VerticalOptions="Center"/>
                        <Label Text="Chá»n mÃ³n tá»« thá»±c Ä‘Æ¡n bÃªn dÆ°á»›i" FontSize="12" TextColor="#B0BEC5"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <Border Grid.Column="2" StrokeShape="RoundRectangle 20" BackgroundColor="#FFBD59" Padding="12,6" VerticalOptions="Center" IsVisible="{Binding CartItems.Count}">
                    <HorizontalStackLayout Spacing="6">
                        <Image Source="shopping_cart.png" HeightRequest="16" WidthRequest="16"/>
                        <Label Text="{Binding CartItems.Count, StringFormat='{0} mÃ³n'}" FontSize="13" FontAttributes="Bold" TextColor="#263238"/>
                    </HorizontalStackLayout>
                </Border>

                <Border Grid.Column="3" StrokeShape="RoundRectangle 20" BackgroundColor="#34464F" Padding="12,6" VerticalOptions="Center" IsVisible="{Binding CartItems.Count}">
                    <Label Text="{Binding Total, StringFormat='{0:N0} VNÄ'}" FontSize="13" FontAttributes="Bold" TextColor="#FFBD59"/>
                </Border>
            </Grid>
        </Border>

        <!-- MENU SECTION -->
        <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto, Auto, *" Padding="20,15" RowSpacing="15">

            <!-- Search Bar -->
            <Border Grid.Row="0" StrokeShape="RoundRectangle 12" Stroke="#E0E0E0" BackgroundColor="White" Padding="12,0" HeightRequest="48">
                <Border.Shadow>
                    <Shadow Brush="#000" Offset="0,2" Radius="4" Opacity="0.05"/>
                </Border.Shadow>
                <Grid ColumnDefinitions="Auto, *">
                    <Image Grid.Column="0" Source="menu_book.png" HeightRequest="20" WidthRequest="20" Margin="0,0,10,0" VerticalOptions="Center"/>
                    <SearchBar Grid.Column="1" Placeholder="TÃ¬m kiáº¿m mÃ³n Äƒn..." Text="{Binding SearchText, Mode=TwoWay}" FontSize="15" TextColor="#263238" PlaceholderColor="#737373" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Categories -->
            <ScrollView Grid.Row="1" Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <StackLayout Orientation="Horizontal" Spacing="10" BindableLayout.ItemsSource="{Binding Categories}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Button Text="{Binding .}" CornerRadius="20" Padding="20,8" FontSize="14"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FoodMenuViewModel}}, Path=FilterCommand}"
                                    CommandParameter="{Binding .}"
                                    Style="{StaticResource CategoryButtonStyle}"/>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>

            <!-- Food Items -->
            <ScrollView Grid.Row="2" VerticalOptions="FillAndExpand">
                <VerticalStackLayout Spacing="15">
                    <Label Text="{Binding SelectedCategory}" FontSize="22" FontAttributes="Bold" TextColor="#263238" Margin="0,5,0,0"/>
                    <CollectionView ItemsSource="{Binding DisplayedFoodItems}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="20"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:FoodModel">
                                <Border StrokeShape="RoundRectangle 15" Padding="0" Stroke="Transparent" BackgroundColor="White">
                                    <Border.Shadow>
                                        <Shadow Brush="#000" Offset="0,4" Radius="12" Opacity="0.08"/>
                                    </Border.Shadow>
                                    <Grid RowDefinitions="180, Auto, Auto, Auto, Auto" RowSpacing="0">
                                        <!-- IMAGE -->
                                        <Border Grid.Row="0" StrokeShape="RoundRectangle 15,15,0,0" BackgroundColor="#F0F0F0">
                                            <Image Source="{Binding DisplayImageUrl}" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                        </Border>

                                        <!-- Name -->
                                        <Label Grid.Row="1" Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="#263238" Margin="12,12,12,5" LineBreakMode="TailTruncation" MaxLines="2"/>
                                        <!-- Category -->
                                        <Border Grid.Row="2" StrokeShape="RoundRectangle 10" BackgroundColor="#F5F5F5" Padding="8,3" Margin="12,0,12,8" HorizontalOptions="Start">
                                            <Label Text="{Binding Category}" TextColor="#737373" FontSize="11"/>
                                        </Border>
                                        <!-- Price -->
                                        <Label Grid.Row="3" Text="{Binding Price, StringFormat='{0:N0} VNÄ'}" TextColor="#FFBD59" FontSize="18" FontAttributes="Bold" Margin="12,0,12,10"/>
                                        <!-- Add Button -->
                                        <Button Grid.Row="4" Text="ThÃªm mÃ³n"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FoodMenuViewModel}}, Path=AddToCartCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#FFBD59" TextColor="#263238" CornerRadius="10" Margin="12,0,12,12" HeightRequest="42" FontSize="15" FontAttributes="Bold"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- CART SECTION -->
        <Border Grid.Row="1" Grid.Column="1" BackgroundColor="White" Padding="0" StrokeThickness="0">
            <Grid RowDefinitions="*, Auto" RowSpacing="0">
                <ScrollView Grid.Row="0" VerticalScrollBarVisibility="Default" Padding="20,15,20,0">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="MÃ³n Ä‘Ã£ chá»n" FontAttributes="Bold" FontSize="17" TextColor="#263238" Margin="0,0,0,10"/>
                        <CollectionView ItemsSource="{Binding CartItems}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:CartItemModel">
                                    <Border StrokeShape="RoundRectangle 12" BackgroundColor="#F8F8F8" Padding="12" Margin="0,0,0,10">
                                        <Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="10">
                                            <!-- ROW 0: ThÃ´ng tin mÃ³n + sá»‘ lÆ°á»£ng + giÃ¡ -->
                                            <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto" ColumnSpacing="12" RowSpacing="8">
                                                <!-- Sá»‘ lÆ°á»£ng -->
                                                <Border Grid.Column="0" Grid.RowSpan="2" StrokeShape="RoundRectangle 10" BackgroundColor="#FFBD59" Padding="12,8" VerticalOptions="Center">
                                                    <Label Text="{Binding Quantity}" FontAttributes="Bold" FontSize="18" TextColor="#263238" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                </Border>

                                                <!-- TÃªn mÃ³n -->
                                                <HorizontalStackLayout Grid.Column="1" Grid.Row="0" Spacing="6" VerticalOptions="Center">
                                                    <Label Text="{Binding FoodItem.Name}" FontSize="15" FontAttributes="Bold" TextColor="#263238" VerticalOptions="Center" LineBreakMode="TailTruncation" MaxLines="1"/>
                                                    <!-- Icon ghi chÃº -->
                                                    <Border IsVisible="{Binding HasNote}" StrokeShape="RoundRectangle 10" BackgroundColor="#4CAF50" Padding="4,2" VerticalOptions="Center">
                                                        <Label Text="ðŸ“" FontSize="10"/>
                                                    </Border>
                                                </HorizontalStackLayout>

                                                <!-- GiÃ¡ Ä‘Æ¡n vá»‹ -->
                                                <Label Grid.Column="1" Grid.Row="1" Text="{Binding FoodItem.Price, StringFormat='{0:N0} VNÄ'}" FontSize="12" TextColor="#737373" VerticalOptions="Center"/>

                                                <!-- Tá»•ng tiá»n + NÃºt Ä‘iá»u chá»‰nh -->
                                                <VerticalStackLayout Grid.Column="2" Grid.RowSpan="2" Spacing="8" VerticalOptions="Center">
                                                    <Label Text="{Binding TotalPrice, StringFormat='{0:N0} VNÄ'}" FontSize="16" FontAttributes="Bold" TextColor="#FFBD59" HorizontalOptions="End"/>
                                                    <HorizontalStackLayout Spacing="8" HorizontalOptions="End">
                                                        <!-- Button trá»« -->
                                                        <Border WidthRequest="36" 
            HeightRequest="36" 
            BackgroundColor="#E0E0E0"
            StrokeThickness="0">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="18"/>
                                                            </Border.StrokeShape>
                                                            <Border.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FoodMenuViewModel}}, Path=DecreaseQuantityCommand}" CommandParameter="{Binding .}"/>
                                                            </Border.GestureRecognizers>
                                                            <Label Text="&#xe15b;" Style="{StaticResource IconStyle}"
               FontFamily="MaterialIcons"
               FontSize="16" 
               TextColor="#263238" 
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"/>
                                                        </Border>

                                                        <!-- Button cá»™ng -->
                                                        <Border WidthRequest="36" 
            HeightRequest="36" 
            BackgroundColor="#FFBD59"
            StrokeThickness="0">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="18"/>
                                                            </Border.StrokeShape>
                                                            <Border.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FoodMenuViewModel}}, Path=IncreaseQuantityCommand}" CommandParameter="{Binding .}"/>
                                                            </Border.GestureRecognizers>
                                                            
                                                                <Label Text="&#xe145;" Style="{StaticResource IconStyle}"
               FontFamily="MaterialIcons"
               FontSize="16" 
               TextColor="#263238" 
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"/>
                                                        </Border>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- ROW 1: Hiá»ƒn thá»‹ ghi chÃº náº¿u cÃ³ -->
                                            <Border Grid.Row="1" IsVisible="{Binding HasNote}" StrokeShape="RoundRectangle 8" BackgroundColor="#FFF8E1" Padding="10,8" Stroke="#FFD54F" StrokeThickness="1">
                                                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="8">
                                                    <Label Grid.Column="0" Text="{Binding Note}" FontSize="12" TextColor="#5D4037" LineBreakMode="WordWrap" VerticalOptions="Center" FontAttributes="None"/>
                                                    <Button Grid.Column="1" Text="âœ•" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FoodMenuViewModel}}, Path=RemoveNoteCommand}" CommandParameter="{Binding .}" WidthRequest="24" HeightRequest="24" CornerRadius="12" Padding="0" BackgroundColor="#FFECB3" TextColor="#F57C00" FontSize="12" FontAttributes="Bold" VerticalOptions="Center"/>
                                                </Grid>
                                            </Border>

                                            <!-- ROW 2: NÃºt thÃªm/sá»­a ghi chÃº -->
                                            <Button Grid.Row="2" Text="{Binding HasNote, Converter={StaticResource NoteButtonTextConverter}}" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FoodMenuViewModel}}, Path=AddNoteCommand}" CommandParameter="{Binding .}" BackgroundColor="#FFF3E0" TextColor="#E65100" CornerRadius="8" HeightRequest="36" FontSize="13" Padding="12,0" BorderColor="#FFBD59" BorderWidth="1"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Checkout -->
                <VerticalStackLayout Grid.Row="1" Spacing="12" Padding="20,20,20,20" BackgroundColor="White">
                    <BoxView HeightRequest="2" Color="#F0F0F0" Margin="0,0,0,8"/>
                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" RowSpacing="8">
                       
                        <Label Grid.Row="1" Grid.Column="0" Text="Tá»”NG Cá»˜NG" FontAttributes="Bold" FontSize="20" TextColor="#263238"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Total, StringFormat='{0:N0} VNÄ'}" FontAttributes="Bold" FontSize="20" TextColor="#FFBD59"/>
                    </Grid>
                    <Button Text="Gá»¬I ÄÆ N" Command="{Binding CheckoutCommand}" BackgroundColor="#FFBD59" TextColor="#263238" CornerRadius="12" HeightRequest="54" FontSize="17" FontAttributes="Bold">
                        <Button.Shadow>
                            <Shadow Brush="#FFBD59" Offset="0,4" Radius="8" Opacity="0.3"/>
                        </Button.Shadow>
                    </Button>
                    <Button Text="Há»¦Y ÄÆ N" Command="{Binding CancelOrderCommand}" BackgroundColor="#F5F5F5" TextColor="#737373" CornerRadius="12" HeightRequest="50" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentPage>