<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.OrdersPage"
             xmlns:vm="clr-namespace:RestaurantManagementGUI.ViewModels"
             xmlns:models="clr-namespace:RestaurantManagementGUI.Models"
             xmlns:converters="clr-namespace:RestaurantManagementGUI.Converters"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F6F6F6"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NoteButtonTextConverter x:Key="NoteButtonTextConverter"/>
            <Style x:Key="CategoryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="#263238"/>
                <Setter Property="BorderColor" Value="#E0E0E0"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*, 380" RowSpacing="0" ColumnSpacing="0">

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="#263238" Padding="20,15">
            <Grid ColumnDefinitions="Auto, *, Auto, Auto" ColumnSpacing="15">
                <ImageButton Grid.Column="0" Source="back_icon.png" HeightRequest="24" WidthRequest="24" 
                             BackgroundColor="Transparent" Clicked="OnBackButtonClicked"/>

                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                    <Label Text="{Binding TableName}" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                    <Label Text="Chọn món từ thực đơn bên dưới" FontSize="12" TextColor="#B0BEC5"/>
                </VerticalStackLayout>

                <Border Grid.Column="2" StrokeShape="RoundRectangle 20" BackgroundColor="#FFBD59" Padding="12,6" IsVisible="{Binding CartItems.Count}">
                    <HorizontalStackLayout Spacing="6">
                        <Image Source="shopping_cart.png" HeightRequest="16" WidthRequest="16"/>
                        <Label Text="{Binding CartItems.Count, StringFormat='{0} món'}" FontSize="13" FontAttributes="Bold" TextColor="#263238"/>
                    </HorizontalStackLayout>
                </Border>

                <Border Grid.Column="3" StrokeShape="RoundRectangle 20" BackgroundColor="#34464F" Padding="12,6" IsVisible="{Binding CartItems.Count}">
                    <Label Text="{Binding TotalAmount, StringFormat='{0:N0} VNĐ'}" FontSize="13" FontAttributes="Bold" TextColor="#FFBD59"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto, Auto, *" Padding="20,15" RowSpacing="15">

            <Border Grid.Row="0" StrokeShape="RoundRectangle 12" Stroke="#E0E0E0" BackgroundColor="White" Padding="12,0" HeightRequest="48">
                <Grid ColumnDefinitions="Auto, *">
                    <Image Grid.Column="0" Source="restaurant.png" HeightRequest="20" WidthRequest="20" Margin="0,0,10,0"/>
                    <SearchBar Grid.Column="1" Placeholder="Tìm kiếm món ăn..." Text="{Binding SearchText}" FontSize="15" BackgroundColor="Transparent"/>
                </Grid>
            </Border>

            <ScrollView Grid.Row="1" Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <StackLayout Orientation="Horizontal" Spacing="10" BindableLayout.ItemsSource="{Binding Categories}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Button Text="{Binding .}" CornerRadius="20" Padding="20,8" FontSize="14"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=FilterCategoryCommand}"
                                    CommandParameter="{Binding .}"
                                    Style="{StaticResource CategoryButtonStyle}"/>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>

            <ScrollView Grid.Row="2">
                <CollectionView ItemsSource="{Binding DisplayedFoods}" SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="20"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:FoodModel">
                            <Border StrokeShape="RoundRectangle 15" Padding="0" BackgroundColor="White" StrokeThickness="0">
                                <Border.Shadow>
                                    <Shadow Brush="#000" Offset="0,4" Radius="12" Opacity="0.08"/>
                                </Border.Shadow>
                                <Grid RowDefinitions="150, Auto, Auto, Auto">
                                    <Image Grid.Row="0" Source="{Binding DisplayImageUrl}" Aspect="AspectFill" HeightRequest="150"/>

                                    <Label Grid.Row="1" Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="#263238" Margin="10,10,10,0" LineBreakMode="TailTruncation"/>

                                    <Label Grid.Row="2" Text="{Binding Price, StringFormat='{0:N0} VNĐ'}" TextColor="#FFBD59" FontSize="16" FontAttributes="Bold" Margin="10,0"/>

                                    <Button Grid.Row="3" Text="Thêm món"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=AddToCartCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#FFBD59" TextColor="#263238" CornerRadius="10" Margin="10" FontAttributes="Bold"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Grid>

        <Border Grid.Row="1" Grid.Column="1" BackgroundColor="White" StrokeThickness="0">
            <Grid RowDefinitions="*, Auto">
                <ScrollView Grid.Row="0" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Món đã chọn" FontAttributes="Bold" FontSize="18" TextColor="#263238"/>

                        <CollectionView ItemsSource="{Binding CartItems}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:CartItemModel">
                                    <Border StrokeShape="RoundRectangle 12" BackgroundColor="#F8F8F8" Padding="10" Margin="0,0,0,10">
                                        <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto">
                                            <Border Grid.Column="0" Grid.RowSpan="2" StrokeShape="RoundRectangle 8" BackgroundColor="#FFBD59" Padding="8" VerticalOptions="Center" Margin="0,0,10,0">
                                                <Label Text="{Binding Quantity}" FontAttributes="Bold" TextColor="#263238"/>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                                <Label Text="{Binding FoodItem.Name}" FontAttributes="Bold" TextColor="#263238"/>
                                                <Label Text="{Binding FoodItem.Price, StringFormat='{0:N0}'}" FontSize="12" TextColor="Gray"/>
                                            </VerticalStackLayout>

                                            <HorizontalStackLayout Grid.Column="2" Spacing="5" VerticalOptions="Center">
                                                <Button Text="-" WidthRequest="30" HeightRequest="30" Padding="0" CornerRadius="15" BackgroundColor="#E0E0E0" TextColor="Black"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=DecreaseQtyCommand}"
                                                        CommandParameter="{Binding .}"/>
                                                <Button Text="+" WidthRequest="30" HeightRequest="30" Padding="0" CornerRadius="15" BackgroundColor="#FFBD59" TextColor="Black"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=IncreaseQtyCommand}"
                                                        CommandParameter="{Binding .}"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>

                <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="10" BackgroundColor="White">
                    <BoxView HeightRequest="1" Color="#E0E0E0"/>
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="TỔNG CỘNG" FontAttributes="Bold" FontSize="18"/>
                        <Label Grid.Column="1" Text="{Binding TotalAmount, StringFormat='{0:N0} VNĐ'}" FontAttributes="Bold" FontSize="18" TextColor="#FFBD59"/>
                    </Grid>

                    <Button Text="GỬI ĐƠN" Command="{Binding SubmitOrderCommand}" BackgroundColor="#FFBD59" TextColor="#263238" FontAttributes="Bold" HeightRequest="50" CornerRadius="10"/>
                    <Button Text="XÓA GIỎ" Command="{Binding ClearCartCommand}" BackgroundColor="#F5F5F5" TextColor="Gray" FontAttributes="Bold" HeightRequest="45" CornerRadius="10"/>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <ActivityIndicator Grid.RowSpan="2" Grid.ColumnSpan="2" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" 
                           HorizontalOptions="Center" VerticalOptions="Center" Color="#FFBD59"/>
    </Grid>
</ContentPage>