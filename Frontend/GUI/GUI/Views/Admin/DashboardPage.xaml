<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementGUI.DashboardPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Style x:Key="DashboardButtonStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,0,10,15"/>
            <Setter Property="Stroke" Value="#E0E0E0"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 15"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HeightRequest" Value="130"/>
            <Setter Property="Shadow" Value="0,2,5,Black"/>
        </Style>

        <Style x:Key="DashboardButtonInnerStyle" TargetType="Button">
            <Setter Property="TextColor" Value="#263238"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </ContentPage.Resources>

    <Grid x:Name="MainLayout" BackgroundColor="White">

        <Grid x:Name="UserInfoPanel" BackgroundColor="#FFBD59" Padding="20">
            <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                <Label Text="NHÓM II" TextColor="#263238" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="Admin Dashboard" TextColor="#263238" FontSize="14" HorizontalOptions="Center" Opacity="0.8"/>

                <BoxView HeightRequest="2" Color="#263238" Opacity="0.2" WidthRequest="100"/>

                <Label x:Name="WelcomeLabel" Text="Xin chào, Admin" FontSize="16" TextColor="#263238" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

                <Button Text="Đăng xuất" x:Name="LogoutButton"
                        TextColor="White" BackgroundColor="#263238" FontAttributes="Bold"
                        CornerRadius="20" HeightRequest="45" WidthRequest="140"
                        Margin="0,20,0,0"
                        Clicked="OnLogoutClicked"/>
            </VerticalStackLayout>
        </Grid>

        <ScrollView x:Name="ContentScroll" Padding="20">
            <FlexLayout x:Name="ButtonsLayout" Wrap="Wrap" JustifyContent="Start" AlignContent="Start">

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="users.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="QL Người dùng" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnUsersClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="categories.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="QL Loại món" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnFoodCategoriesClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="menu.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="Menu món" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnFoodMenuClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="orders.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="Đặt món" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnOrdersClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="tables.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="Đặt bàn" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnTablesClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="bill.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="Thanh toán" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnBillGenerationClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="revenue.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="Doanh thu" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnRevenueReportClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource DashboardButtonStyle}" FlexLayout.Basis="{OnIdiom Phone='47%', Default='30%'}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                        <Image Source="chat_9374926.png" HeightRequest="45" Aspect="AspectFit"/>
                        <Button Text="Chat nội bộ" Style="{StaticResource DashboardButtonInnerStyle}" Clicked="OnChatClicked"/>
                    </VerticalStackLayout>
                </Border>

            </FlexLayout>
        </ScrollView>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutStates">

                <VisualState x:Name="Phone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter TargetName="MainLayout" Property="RowDefinitions" Value="Auto, *" />
                        <Setter TargetName="MainLayout" Property="ColumnDefinitions" Value="*" />

                        <Setter TargetName="UserInfoPanel" Property="Grid.Row" Value="0" />
                        <Setter TargetName="UserInfoPanel" Property="Grid.Column" Value="0" />

                        <Setter TargetName="ContentScroll" Property="Grid.Row" Value="1" />
                        <Setter TargetName="ContentScroll" Property="Grid.Column" Value="0" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter TargetName="MainLayout" Property="RowDefinitions" Value="*" />
                        <Setter TargetName="MainLayout" Property="ColumnDefinitions" Value="280, *" />
                        <Setter TargetName="UserInfoPanel" Property="Grid.Row" Value="0" />
                        <Setter TargetName="UserInfoPanel" Property="Grid.Column" Value="0" />

                        <Setter TargetName="ContentScroll" Property="Grid.Row" Value="0" />
                        <Setter TargetName="ContentScroll" Property="Grid.Column" Value="1" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

    </Grid>
</ContentPage>