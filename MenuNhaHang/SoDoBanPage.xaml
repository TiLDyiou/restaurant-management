<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuNhaHang.SoDoBanPage"
             Title="Sơ đồ bàn"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="TableButtonStyle">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="CornerRadius" Value="40"/>
            <Setter Property="WidthRequest" Value="80"/>
            <Setter Property="HeightRequest" Value="80"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="BorderColor" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderWidth" Value="2"/>
            <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
        </Style>
    </ContentPage.Resources>

    <Grid Padding="20" ColumnSpacing="15" RowSpacing="15"
          ColumnDefinitions="*,*,*,*"
          RowDefinitions="*,*,*,*">

        <Button Grid.Row="0" Grid.Column="0" Text="1" Clicked="Ban_Clicked" CommandParameter="1" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="0" Grid.Column="1" Text="2" Clicked="Ban_Clicked" CommandParameter="2" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="0" Grid.Column="2" Text="3" Clicked="Ban_Clicked" CommandParameter="3" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="0" Grid.Column="3" Text="4" Clicked="Ban_Clicked" CommandParameter="4" Style="{StaticResource TableButtonStyle}"/>

        <Button Grid.Row="1" Grid.Column="0" Text="5" Clicked="Ban_Clicked" CommandParameter="5" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="1" Grid.Column="1" Text="6" Clicked="Ban_Clicked" CommandParameter="6" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="1" Grid.Column="2" Text="7" Clicked="Ban_Clicked" CommandParameter="7" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="1" Grid.Column="3" Text="8" Clicked="Ban_Clicked" CommandParameter="8" Style="{StaticResource TableButtonStyle}"/>

        <Button Grid.Row="2" Grid.Column="0" Text="9" Clicked="Ban_Clicked" CommandParameter="9" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="2" Grid.Column="1" Text="10" Clicked="Ban_Clicked" CommandParameter="10" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="2" Grid.Column="2" Text="11" Clicked="Ban_Clicked" CommandParameter="11" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="2" Grid.Column="3" Text="12" Clicked="Ban_Clicked" CommandParameter="12" Style="{StaticResource TableButtonStyle}"/>

        <Button Grid.Row="3" Grid.Column="0" Text="13" Clicked="Ban_Clicked" CommandParameter="13" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="3" Grid.Column="1" Text="14" Clicked="Ban_Clicked" CommandParameter="14" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="3" Grid.Column="2" Text="15" Clicked="Ban_Clicked" CommandParameter="15" Style="{StaticResource TableButtonStyle}"/>
        <Button Grid.Row="3" Grid.Column="3" Text="16" Clicked="Ban_Clicked" CommandParameter="16" Style="{StaticResource TableButtonStyle}"/>
    </Grid>
</ContentPage>