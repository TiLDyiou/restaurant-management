<?xml version="1.0" encoding="UTF-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MenuNhaHang.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#B71C1C</Color>
            <Color x:Key="AccentColor">#D32F2F</Color>
            <Color x:Key="BackgroundColor">#FFF8E1</Color>
            <Color x:Key="TextDark">#3E2723</Color>
            <Color x:Key="CardColor">#FFFFFF</Color>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
